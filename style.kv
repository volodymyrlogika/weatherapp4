<HomeScreen>:
    MDBoxLayout:
        size_hint: (1,1)
        orientation: "vertical"
        spacing: "20sp"

        MDTopAppBar:
            title: "WeatherApp"
            md_bg_color: "#602b7a"
        MDBoxLayout:
            padding: "20sp"
            spacing: "20sp"
            MDTextField:
                id: city_name
                hint_text: "Введіть місто"
                mode: "fill"
            MDIconButton:
                id: search_btn                          
                icon: "magnify"
                md_bg_color: "#602b7a"
                on_press: root.search()
        MDLabel:
            id: content_text
            text: "Content"
            halign: "center"
